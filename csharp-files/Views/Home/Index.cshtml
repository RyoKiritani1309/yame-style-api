@model List<YameApi.Models.Product>
@{
    ViewData["Title"] = "Trang chủ";
}

<!-- Hero Section -->
<section class="hero">
    <div class="hero-bg">
        <img src="/images/hero-fashion.jpg" alt="Fashion collection" />
        <div class="hero-overlay"></div>
    </div>
    
    <div class="container hero-content">
        <div class="hero-text">
            <h1 class="hero-title">
                Thời Trang<br />
                <span class="accent">Hiện Đại</span>
            </h1>
            
            <p class="hero-description">
                Khám phá bộ sưu tập mới nhất với thiết kế độc đáo và chất lượng cao cấp.
                Phong cách Việt, chất lượng quốc tế.
            </p>

            <div class="hero-buttons">
                <a href="/ProductsView" class="btn btn-primary">
                    Mua sắm ngay
                    <svg class="icon btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                    </svg>
                </a>
                
                <a href="/collections" class="btn btn-outline">
                    Bộ sưu tập
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Featured Products Section -->
<section class="section">
    <div class="container">
        <div class="section-header-flex">
            <div>
                <h2 class="section-title">Sản phẩm nổi bật</h2>
                <p class="section-subtitle">Khám phá những sản phẩm được yêu thích nhất</p>
            </div>
            <a href="/ProductsView" class="btn btn-outline">
                Xem tất cả
                <svg class="icon btn-icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"/>
                </svg>
            </a>
        </div>

        <div class="product-grid">
            @foreach (var product in Model.Take(4))
            {
                var hasDiscount = product.SalePrice.HasValue && product.SalePrice < product.Price;
                var discountPercent = hasDiscount ? Math.Round(((product.Price - product.SalePrice!.Value) / product.Price) * 100) : 0;

                <div class="product-card">
                    <a href="/ProductsView/Detail/@product.Id">
                        <div class="product-image-wrapper">
                            <img src="@product.Images.FirstOrDefault()" alt="@product.Title" class="product-image" />
                            @if (hasDiscount)
                            {
                                <span class="product-badge badge-sale">-@discountPercent%</span>
                            }
                        </div>
                        
                        <div class="product-info">
                            <div class="product-tags">
                                @foreach (var tag in product.Tags.Take(2))
                                {
                                    <span class="product-tag">@tag</span>
                                }
                            </div>
                            
                            <h3 class="product-title">@product.Title</h3>
                            
                            <p class="product-description">@product.ShortDescription</p>

                            <div class="product-price-wrapper">
                                <span class="product-price">
                                    @((product.SalePrice ?? product.Price).ToString("N0"))đ
                                </span>
                                @if (hasDiscount)
                                {
                                    <span class="product-price-old">@product.Price.ToString("N0")đ</span>
                                }
                            </div>
                        </div>
                    </a>
                    
                    <div class="product-quick-add">
                        <button class="btn btn-icon-only" onclick="event.preventDefault();">
                            <svg class="icon" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"/>
                            </svg>
                        </button>
                    </div>
                </div>
            }
        </div>
    </div>
</section>

<!-- Categories Section -->
<section class="section bg-muted">
    <div class="container">
        <div class="section-header section-center">
            <h2 class="section-title">Danh mục sản phẩm</h2>
            <p class="section-subtitle">Tìm kiếm theo danh mục yêu thích của bạn</p>
        </div>

        <div class="product-grid product-grid-3">
            <a href="/ProductsView?category=ao" class="category-card">
                <div class="category-content">
                    <h3 class="category-title">Áo</h3>
                    <p class="category-description">Áo thun, hoodie, áo khoác và nhiều hơn nữa</p>
                </div>
                <div class="category-decoration"></div>
            </a>

            <a href="/ProductsView?category=quan" class="category-card">
                <div class="category-content">
                    <h3 class="category-title">Quần</h3>
                    <p class="category-description">Quần jean, kaki, short và nhiều kiểu dáng</p>
                </div>
                <div class="category-decoration"></div>
            </a>

            <a href="/ProductsView?category=giay" class="category-card">
                <div class="category-content">
                    <h3 class="category-title">Giày dép</h3>
                    <p class="category-description">Sneaker, sandal và phụ kiện thời trang</p>
                </div>
                <div class="category-decoration"></div>
            </a>
        </div>
    </div>
</section>

<!-- Why Choose Us Section -->
<section class="section">
    <div class="container">
        <div class="section-header section-center">
            <h2 class="section-title">Tại sao chọn YAME?</h2>
            <p class="section-subtitle">Cam kết mang đến trải nghiệm mua sắm tốt nhất</p>
        </div>

        <div class="features-grid">
            <div class="feature-item">
                <div class="feature-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                </div>
                <h3 class="feature-title">Chất lượng cao cấp</h3>
                <p class="feature-description">
                    Sản phẩm được làm từ chất liệu cao cấp, bền đẹp theo thời gian
                </p>
            </div>

            <div class="feature-item">
                <div class="feature-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"/>
                    </svg>
                </div>
                <h3 class="feature-title">Giao hàng nhanh</h3>
                <p class="feature-description">
                    Miễn phí vận chuyển cho đơn hàng trên 500.000đ toàn quốc
                </p>
            </div>

            <div class="feature-item">
                <div class="feature-icon">
                    <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"/>
                    </svg>
                </div>
                <h3 class="feature-title">Đổi trả dễ dàng</h3>
                <p class="feature-description">
                    Chính sách đổi trả trong vòng 30 ngày, hoàn tiền 100%
                </p>
            </div>
        </div>
    </div>
</section>
