@model YameApi.Models.Product
@{
    ViewData["Title"] = Model.Title + " - YAME";
    var hasDiscount = Model.SalePrice.HasValue && Model.SalePrice < Model.Price;
    var discountPercent = hasDiscount ? Math.Round(((Model.Price - Model.SalePrice!.Value) / Model.Price) * 100) : 0;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="/">YAME</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Products">Sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Collections">Bộ sưu tập</a></li>
                    <li class="nav-item"><a class="nav-link" href="/About">Về chúng tôi</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <div class="row">
            <!-- Product Images -->
            <div class="col-lg-6">
                <img src="@Model.Images.FirstOrDefault()" alt="@Model.Title" class="img-fluid rounded">
            </div>

            <!-- Product Info -->
            <div class="col-lg-6">
                <nav aria-label="breadcrumb">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
                        <li class="breadcrumb-item"><a href="/Products">Sản phẩm</a></li>
                        <li class="breadcrumb-item active">@Model.Title</li>
                    </ol>
                </nav>

                <h1 class="fw-bold mb-3">@Model.Title</h1>
                
                <div class="mb-3">
                    @foreach (var tag in Model.Tags)
                    {
                        <span class="badge bg-secondary me-1">@tag</span>
                    }
                </div>

                <div class="mb-4">
                    <span class="fs-2 fw-bold text-warning">@((Model.SalePrice ?? Model.Price).ToString("N0"))đ</span>
                    @if (hasDiscount)
                    {
                        <span class="fs-5 text-muted text-decoration-line-through ms-3">@Model.Price.ToString("N0")đ</span>
                        <span class="badge bg-danger ms-2">-@discountPercent%</span>
                    }
                </div>

                <p class="mb-4">@Model.Description</p>

                <!-- Variants Selection -->
                <div class="mb-4">
                    <h6 class="fw-semibold mb-3">Chọn kích cỡ:</h6>
                    <div class="btn-group" role="group">
                        @foreach (var variant in Model.Variants)
                        {
                            <input type="radio" class="btn-check" name="size" id="size_@variant.VariantId" value="@variant.VariantId">
                            <label class="btn btn-outline-dark" for="size_@variant.VariantId">@variant.Size</label>
                        }
                    </div>
                </div>

                <div class="mb-4">
                    <h6 class="fw-semibold mb-3">Số lượng:</h6>
                    <div class="input-group w-auto">
                        <button class="btn btn-outline-secondary" type="button">-</button>
                        <input type="number" class="form-control text-center" value="1" min="1" style="width: 80px;">
                        <button class="btn btn-outline-secondary" type="button">+</button>
                    </div>
                </div>

                <button class="btn btn-warning btn-lg px-5 mb-3">Thêm vào giỏ hàng</button>

                <!-- Specifications -->
                @if (Model.Specs != null)
                {
                    <div class="mt-5">
                        <h5 class="fw-bold mb-3">Thông số kỹ thuật</h5>
                        <table class="table">
                            <tbody>
                                @if (!string.IsNullOrEmpty(Model.Specs.Material))
                                {
                                    <tr>
                                        <th width="150">Chất liệu:</th>
                                        <td>@Model.Specs.Material</td>
                                    </tr>
                                }
                                @if (!string.IsNullOrEmpty(Model.Specs.MadeIn))
                                {
                                    <tr>
                                        <th>Xuất xứ:</th>
                                        <td>@Model.Specs.MadeIn</td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }

                <!-- Reviews -->
                @if (Model.Reviews != null)
                {
                    <div class="mt-4">
                        <h5 class="fw-bold mb-3">Đánh giá</h5>
                        <div class="d-flex align-items-center">
                            <span class="fs-3 fw-bold me-2">@Model.Reviews.Average.ToString("0.0")</span>
                            <span class="text-muted">(@Model.Reviews.Count đánh giá)</span>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
