@model YameApi.Models.DTOs.ProductListResponse
@{
    ViewData["Title"] = "Sản phẩm - YAME";
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .product-card {
            transition: transform 0.3s, box-shadow 0.3s;
            border: 1px solid #e5e7eb;
            border-radius: 8px;
            overflow: hidden;
        }
        
        .product-card:hover {
            transform: translateY(-4px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1);
        }
        
        .product-image {
            aspect-ratio: 1;
            object-fit: cover;
            width: 100%;
        }
        
        .filter-section {
            background: #f9fafb;
            padding: 20px;
            border-radius: 8px;
        }
    </style>
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom sticky-top">
        <div class="container">
            <a class="navbar-brand fw-bold fs-3" href="/">YAME</a>
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link" href="/">Trang chủ</a></li>
                    <li class="nav-item"><a class="nav-link active" href="/Products">Sản phẩm</a></li>
                    <li class="nav-item"><a class="nav-link" href="/Collections">Bộ sưu tập</a></li>
                    <li class="nav-item"><a class="nav-link" href="/About">Về chúng tôi</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <div class="row">
            <!-- Filters Sidebar -->
            <div class="col-lg-3">
                <div class="filter-section">
                    <h5 class="fw-bold mb-4">Lọc sản phẩm</h5>
                    
                    <form method="get" action="/Products">
                        <!-- Price Filter -->
                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Khoảng giá</h6>
                            <div class="mb-2">
                                <input type="number" name="priceMin" class="form-control form-control-sm" placeholder="Từ" value="@Context.Request.Query["priceMin"]">
                            </div>
                            <div>
                                <input type="number" name="priceMax" class="form-control form-control-sm" placeholder="Đến" value="@Context.Request.Query["priceMax"]">
                            </div>
                        </div>

                        <!-- Size Filter -->
                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Kích cỡ</h6>
                            @if (Model.Facets?.Sizes != null)
                            {
                                @foreach (var size in Model.Facets.Sizes)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="sizes" value="@size" id="size_@size">
                                        <label class="form-check-label" for="size_@size">@size</label>
                                    </div>
                                }
                            }
                        </div>

                        <!-- Color Filter -->
                        <div class="mb-4">
                            <h6 class="fw-semibold mb-3">Màu sắc</h6>
                            @if (Model.Facets?.Colors != null)
                            {
                                @foreach (var color in Model.Facets.Colors)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" name="colors" value="@color" id="color_@color">
                                        <label class="form-check-label" for="color_@color">@color</label>
                                    </div>
                                }
                            }
                        </div>

                        <button type="submit" class="btn btn-warning w-100">Áp dụng</button>
                    </form>
                </div>
            </div>

            <!-- Products Grid -->
            <div class="col-lg-9">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h4 class="fw-bold">Tất cả sản phẩm (@Model.Meta.TotalCount)</h4>
                    <select class="form-select w-auto" onchange="window.location.href='?sort=' + this.value">
                        <option value="relevance">Liên quan</option>
                        <option value="price_asc">Giá: Thấp đến cao</option>
                        <option value="price_desc">Giá: Cao đến thấp</option>
                        <option value="newest">Mới nhất</option>
                    </select>
                </div>

                <div class="row g-4">
                    @foreach (var product in Model.Items)
                    {
                        var hasDiscount = product.SalePrice.HasValue && product.SalePrice < product.Price;
                        var discountPercent = hasDiscount ? Math.Round(((product.Price - product.SalePrice!.Value) / product.Price) * 100) : 0;
                        
                        <div class="col-md-6 col-lg-4">
                            <a href="/Products/@product.Slug" class="text-decoration-none text-dark">
                                <div class="product-card">
                                    <div class="position-relative">
                                        <img src="@product.Images.FirstOrDefault()" alt="@product.Title" class="product-image">
                                        @if (hasDiscount)
                                        {
                                            <span class="badge bg-danger position-absolute top-0 end-0 m-3">-@discountPercent%</span>
                                        }
                                    </div>
                                    <div class="p-3">
                                        <h5 class="fw-semibold mb-2">@product.Title</h5>
                                        <p class="text-muted small mb-3">@product.ShortDescription</p>
                                        <div>
                                            <span class="fs-5 fw-bold text-warning">@((product.SalePrice ?? product.Price).ToString("N0"))đ</span>
                                            @if (hasDiscount)
                                            {
                                                <span class="text-muted text-decoration-line-through small ms-2">@product.Price.ToString("N0")đ</span>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <!-- Pagination -->
                @if (Model.Meta.TotalPages > 1)
                {
                    <nav class="mt-5">
                        <ul class="pagination justify-content-center">
                            @for (int i = 1; i <= Model.Meta.TotalPages; i++)
                            {
                                <li class="page-item @(i == Model.Meta.Page ? "active" : "")">
                                    <a class="page-link" href="?page=@i">@i</a>
                                </li>
                            }
                        </ul>
                    </nav>
                }
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
