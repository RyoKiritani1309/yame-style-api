@{
    ViewData["Title"] = "Đặt lại mật khẩu thành công";
}

<div class="auth-page">
    <div class="auth-container">
        <div class="auth-card">
            <div class="success-icon">
                <svg fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                </svg>
            </div>
            <h1>Đặt lại mật khẩu thành công!</h1>
            <p class="success-message">
                Mật khẩu của bạn đã được đặt lại thành công. 
                Bạn có thể đăng nhập ngay bây giờ với mật khẩu mới.
            </p>
            <a href="/Account/Login" class="btn btn-primary btn-block">Đăng nhập</a>
        </div>
    </div>
</div>

<style>
.auth-page {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    padding: 20px;
}

.auth-container {
    width: 100%;
    max-width: 450px;
}

.auth-card {
    background: white;
    border-radius: 16px;
    padding: 48px 40px;
    box-shadow: 0 20px 60px rgba(0,0,0,0.3);
    text-align: center;
}

.success-icon {
    width: 80px;
    height: 80px;
    margin: 0 auto 24px;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
}

.success-icon svg {
    width: 48px;
    height: 48px;
    stroke-width: 3;
}

.auth-card h1 {
    margin: 0 0 16px;
    font-size: 28px;
    color: #212529;
}

.success-message {
    margin: 0 0 32px;
    color: #495057;
    line-height: 1.6;
    font-size: 15px;
}

.btn {
    padding: 12px 24px;
    border: none;
    border-radius: 8px;
    font-size: 15px;
    font-weight: 500;
    cursor: pointer;
    transition: all 0.2s;
    text-decoration: none;
    display: inline-block;
}

.btn-primary {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    color: white;
}

.btn-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 12px rgba(102, 126, 234, 0.4);
}

.btn-block {
    width: 100%;
}
</style>
